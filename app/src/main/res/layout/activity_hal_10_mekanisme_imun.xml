<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_hal1_2_3_5"
    android:theme="@style/Theme.AppCompat.NoActionBar">

    <LinearLayout
        android:id="@+id/ln1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="40dp">


        <ImageView
            android:layout_width="397dp"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:src="@drawable/judul_mekanisme_imun" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:src="@drawable/content_mekanisme" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ln2"
        android:layout_below="@id/ln1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="40dp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btn_alami"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_alami" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="40dp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btn_adaptif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_adaptif" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>